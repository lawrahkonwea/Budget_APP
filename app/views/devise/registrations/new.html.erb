<div class="signup_form">
<h2>Sign up</h2>
<div class="signup_div">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-field">
     <%= f.text_field :full_name, autofocus: true, placeholder: "Full Name", autocomplete: "name", class: 'input-field' %>
  </div>


  <div class="field">
   
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: 'input-field' %>
  </div>

  <div class="field">

    <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password 6 characters minimum", class: 'input-field' %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm Password",  class: 'input-field' %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: 'up'%>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
