<div class="signup_form">
<h2>Log in</h2>
<div class="signup_div">

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: 'input-field'%>
  </div>

  <div class="field">
    
    <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: 'input-field' %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: 'up' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
